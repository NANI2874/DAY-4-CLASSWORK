#include <stdio.h>

// Define the union called "my_union"
union my_union {
    int integer;
    float floating_point;
};

int main() {
    // Declare a variable of type "my_union"
    union my_union u;

    // Assign values to the fields of the union
    u.integer = 42;
    u.floating_point = 3.14;

    // Print out the value of the union
    printf("The value of the union is: %d\n", u.integer);
    printf("The value of the union is: %f\n", u.floating_point);

    return 0;
}
